<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LotusBlume_ProyFin.Pages.Navbar">
    <Grid BackgroundColor="#D9D9D9" Padding="10,15"
          ColumnDefinitions="*,Auto,*,Auto,*,Auto,*">

        <ImageButton Source="logo_casita.png"
                     HeightRequest="40" WidthRequest="40"
                     Grid.Column="0" HorizontalOptions="Center"
                     Clicked="OnHomeClicked" BackgroundColor="Transparent"/>

        <BoxView Color="Gray" WidthRequest="1" HeightRequest="30"
                 Grid.Column="1" VerticalOptions="Center" />

        <ImageButton Source="corazon.png"
                     HeightRequest="40" WidthRequest="40"
                     Grid.Column="2" HorizontalOptions="Center"
                     Clicked="OnFavoritosClicked" BackgroundColor="Transparent"/>

        <BoxView Color="Gray" WidthRequest="1" HeightRequest="30"
                 Grid.Column="3" VerticalOptions="Center" />

        <ImageButton Source="logo_carrito.png"
                     HeightRequest="40" WidthRequest="40"
                     Grid.Column="4" HorizontalOptions="Center"
                     Clicked="OnCarritoClicked" BackgroundColor="Transparent"/>

        <BoxView Color="Gray" WidthRequest="1" HeightRequest="30"
                 Grid.Column="5" VerticalOptions="Center" />

        <ImageButton Source="logo_usuario.png"
                     HeightRequest="40" WidthRequest="40"
                     Grid.Column="6" HorizontalOptions="Center"
                     Clicked="OnPerfilClicked" BackgroundColor="Transparent"/>
    </Grid>
</ContentView>