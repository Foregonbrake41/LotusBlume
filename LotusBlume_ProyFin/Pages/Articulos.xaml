<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LotusBlume_ProyFin.Pages.Articulos"
             BackgroundColor="White"
             NavigationPage.HasNavigationBar="False">

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- Encabezado con Logo y barra de búsqueda -->
        <HorizontalStackLayout BackgroundColor="Black" Spacing="5" VerticalOptions="Center" Padding="10">
            <Image Source="logo_lotusblume.jpg" HeightRequest="60" WidthRequest="60"/>
            <Frame BackgroundColor="#F0F0F0" CornerRadius="100" HeightRequest="55" WidthRequest="280" HasShadow="False" Padding="10" HorizontalOptions="FillAndExpand">
                <HorizontalStackLayout Spacing="10">
                    <Image Source="lupa.png" HeightRequest="24" WidthRequest="24" />
                    <Entry Placeholder="¿Algo en mente?" HeightRequest="250" WidthRequest="315" FontSize="14"/>
                </HorizontalStackLayout>
            </Frame>
        </HorizontalStackLayout>

        <!-- Contenido Principal -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20" Spacing="20">

                <Label Text="ID: 0001" FontSize="14" TextColor="Gray"/>
                <Label Text="Vestido Elegancia Nocturna" FontSize="24" FontAttributes="Bold" TextColor="Black"/>

                <!-- Corazón de favorito (haz que funcione tambien este para agregar a favorito, la imagen se llama "corazon-relleno.png") -->
                <HorizontalStackLayout HorizontalOptions="End">
                    <Image Source="corazon.png" HeightRequest="30" WidthRequest="30"/>
                </HorizontalStackLayout>

                <!-- Carrusel de imágenes del articulo con un accesorio (vamos a decir que van en combo) -->
                <CarouselView HeightRequest="300" ItemsSource="{Binding Imagenes}">
                    <CarouselView.ItemTemplate>
                        <DataTemplate>
                            <Grid HeightRequest="300" WidthRequest="300">
                                <Image Source="{Binding}" Aspect="AspectFit" />
                            </Grid>
                        </DataTemplate>
                    </CarouselView.ItemTemplate>
                </CarouselView>

                <!-- Autor y precio (le pedi a chatgpt que se inventara unos)-->
                <Grid ColumnDefinitions="*,Auto" Padding="10,5">
                    <Label Text="By: Clara Delgado"
                           FontSize="16"
                           TextColor="Gray"
                           Grid.Column="0"
                           VerticalOptions="Center"/>
                    <Label Text="$1,899 MXN"
                           FontSize="20"
                           TextColor="DarkRed"
                           FontAttributes="Bold"
                           Grid.Column="1"
                           VerticalOptions="Center"/>
                </Grid>

                <!-- Selector de cantidad -->
                <HorizontalStackLayout Spacing="15" VerticalOptions="Center" >
                    <Label Text="Cantidad:" FontSize="16" FontAttributes="Bold" TextColor="#333333" VerticalOptions="Center"/>
                    <Frame Padding="0" HasShadow="False" BackgroundColor="White" CornerRadius="20" VerticalOptions="Center" >
                        <Picker WidthRequest="80" BackgroundColor="Transparent" TextColor="#222222">
                            <Picker.Items>
                                <x:String>1</x:String>
                                <x:String>2</x:String>
                                <x:String>3</x:String>
                            </Picker.Items>
                        </Picker>
                    </Frame>
                </HorizontalStackLayout>


                <!-- Selector de talla (esto lo puse solo por decoracion, yo diria qie no se refleje ningun dato)-->
                <HorizontalStackLayout Spacing="20">
                    <Label Text="Talla:" FontSize="16"/>
                    <VerticalStackLayout>
                        <RadioButton Content="CH" GroupName="tallas"/>
                    </VerticalStackLayout>
                    <VerticalStackLayout>
                        <RadioButton Content="M" GroupName="tallas"/>
                    </VerticalStackLayout>
                    <VerticalStackLayout>
                        <RadioButton Content="G" GroupName="tallas"/>
                    </VerticalStackLayout>
                </HorizontalStackLayout>

                <!-- Descripción de vestido-->
                <Label Text="Vestido largo ideal para eventos de noche. Confeccionado en satín con corte elegante y espalda descubierta. Disponible en varias tallas."
                       FontSize="14"
                       TextColor="Black"
                       LineBreakMode="WordWrap"/>

                <!-- Botones de acción -->
                <Button Text="Añadir al Carrito"
                        BackgroundColor="#E91E63"
                        TextColor="White"
                        CornerRadius="15"
                        FontSize="16"
                        Padding="10"/>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Barra de navegación inferior -->
        <Grid Grid.Row="2" BackgroundColor="#D9D9D9" Padding="10,15" ColumnDefinitions="*,Auto,*,Auto,*,Auto,*">
            <Image Source="logo_casita.png" HeightRequest="40" WidthRequest="40" Grid.Column="0" HorizontalOptions="Center" />
            <BoxView Color="Gray" WidthRequest="1" HeightRequest="30" Grid.Column="1" VerticalOptions="Center" />
            <Image Source="corazon.png" HeightRequest="40" WidthRequest="40" Grid.Column="2" HorizontalOptions="Center" />
            <BoxView Color="Gray" WidthRequest="1" HeightRequest="30" Grid.Column="3" VerticalOptions="Center" />
            <Image Source="logo_carrito.png" HeightRequest="40" WidthRequest="40" Grid.Column="4" HorizontalOptions="Center" />
            <BoxView Color="Gray" WidthRequest="1" HeightRequest="30" Grid.Column="5" VerticalOptions="Center" />
            <Image Source="logo_usuario.png" HeightRequest="40" WidthRequest="40" Grid.Column="6" HorizontalOptions="Center" />
        </Grid>
    </Grid>
</ContentPage>
