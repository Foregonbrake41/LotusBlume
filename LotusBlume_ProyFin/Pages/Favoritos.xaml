<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:LotusBlume_ProyFin.Pages"
             xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="LotusBlume_ProyFin.Pages.Favoritos"
             BackgroundColor="White"
             NavigationPage.HasNavigationBar="False">

    <Page.Behaviors>
        <mct:StatusBarBehavior StatusBarColor="Black"/>
    </Page.Behaviors>

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- Encabezado con logo y barra de búsqueda -->
        <local:Header Grid.Row="0" HeightRequest="81"/>

        <!-- Contenido principal -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="15" Spacing="20">

                <Label x:Name="tituloFavoritos"
                       Text="Mis Favoritos (0)"
                       FontSize="22"
                       FontAttributes="Bold"
                       TextColor="Black"
                       HorizontalOptions="Center" />

                <!-- Artículo en favoritos estilo horizontal -->
                <CollectionView ItemsSource="{Binding FavoritosList}" Margin="0,10">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BorderColor="#D9D9D9" CornerRadius="10" Padding="10" HasShadow="True" Margin="0,0,0,15">
                                <HorizontalStackLayout Spacing="15" VerticalOptions="Center">

                                    <Image Source="{Binding ImagenPrincipal}" 
                           HeightRequest="120" 
                           WidthRequest="90" 
                           Aspect="AspectFill" />

                                    <VerticalStackLayout Spacing="5" VerticalOptions="CenterAndExpand">
                                        <Label Text="{Binding Nombre}" FontSize="18" FontAttributes="Bold" TextColor="Black" />
                                        <Label Text="{Binding Precio, StringFormat='${0:N2} MXN'}" FontSize="16" TextColor="DarkRed" />
                                        <Button Text="Añadir al carrito" 
                                Command="{Binding Source={RelativeSource AncestorType={x:Type local:Favoritos}}, Path=BindingContext.OnAddToCartClicked}"
                                CommandParameter="{Binding .}"
                                BackgroundColor="#E91E63" 
                                TextColor="White" 
                                CornerRadius="10" 
                                Padding="8,4" 
                                FontSize="14" 
                                WidthRequest="150"/>
                                    </VerticalStackLayout>

                                    <Image Source="corazon_relleno.png" 
                           HeightRequest="30" 
                           WidthRequest="30" 
                           HorizontalOptions="End" 
                           VerticalOptions="Center">
                                        <Image.GestureRecognizers>
                                            <TapGestureRecognizer 
                                Command="{Binding Source={RelativeSource AncestorType={x:Type local:Favoritos}}, Path=BindingContext.OnEliminarFavorito}"
                                CommandParameter="{Binding .}"/>
                                        </Image.GestureRecognizers>
                                    </Image>

                                </HorizontalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Barra de navegación inferior con divisores -->
        <local:Navbar Grid.Row="2"/>
    </Grid>
</ContentPage>
